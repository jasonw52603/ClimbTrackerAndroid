<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResetAreaFragment">

    <TextView
        android:id="@+id/tvNewSetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/placeholder"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChangeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/change"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/tvNewSetDate"
        app:layout_constraintStart_toEndOf="@id/tvNewSetDate"
        app:layout_constraintTop_toTopOf="@id/tvNewSetDate" />

    <TextView
        android:id="@+id/tvNewColorLabel"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/str_color"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewSetDate" />

    <Spinner
        android:id="@+id/spnProblemColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNewColorLabel"
        app:layout_constraintTop_toTopOf="@id/tvNewColorLabel" />

    <TextView
        android:id="@+id/tvNewSetterLabel"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/setter"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewColorLabel" />

    <EditText
        android:id="@+id/etNewSetter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNewSetterLabel"
        app:layout_constraintTop_toTopOf="@id/tvNewSetterLabel" />

    <TextView
        android:id="@+id/tvNewGradeLabel"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/grade"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNewSetterLabel" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNewGradeLabel"
        app:layout_constraintTop_toTopOf="@id/tvNewGradeLabel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNewGradeLabel">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>